							<w:layoutData>
								<f:GridContainerItemLayoutData minRows="5" columns="4" />
							</w:layoutData>
						</w:Card>

						<w:Card manifest="{manifests>/listContent/infoCard}">
							<w:layoutData>
								<f:GridContainerItemLayoutData minRows="5" columns="4" />
							</w:layoutData>
						</w:Card>

						<w:Card manifest="{manifests>/listContent/keySkillsECC}">
