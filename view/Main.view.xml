<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="lab.PresentationSite.controller.Main" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content><TileContainer>
					        <tiles>
					            <CustomTile removable="false">
					                <content>
					                    <Image width="140px" height="140px" src="./pictures/twitter.png"/>
					                </content>
					            </CustomTile>
					            <StandardTile title="Github page" info="github.com/Louis-Arnaud" infoState="Success" removable="false" press="goToGithubPage"/>
					            <StandardTile title="SAP Profile" info="people.sap.com/lab_pm" activeIcon="sap-icon://sap-logo-shape" infoState="Success" removable="false" icon="sap-icon://sap-logo-shape" press="goToSapProfile"/></tiles>
					    </TileContainer>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>